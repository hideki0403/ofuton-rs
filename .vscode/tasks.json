{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate migration",
            "type": "shell",
            "command": "sea-orm-cli",
            "args": [
                "migrate",
                "generate",
                "${input:migration_name}"
            ]
        },
        {
            "label": "generate entity",
            "type": "shell",
            "command": "sea-orm-cli",
            "args": [
                "generate",
                "entity",
                "-u",
                "${input:database_url}",
                "-o",
                "${input:entity_output_path}"
            ],
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "migration_name",
            "type": "promptString",
            "description": "Enter migration name",
        },
        {
            "id": "database_url",
            "type": "promptString",
            "description": "Enter database URL (e.g., sqlite://./ofuton.sqlite3?mode=rwc)",
            "default": "sqlite://./ofuton.sqlite3?mode=rwc",
        },
        {
            "id": "entity_output_path",
            "type": "promptString",
            "description": "Enter output path for entity files (e.g., entity/src)",
            "default": "entity/src",
        }
    ],
}